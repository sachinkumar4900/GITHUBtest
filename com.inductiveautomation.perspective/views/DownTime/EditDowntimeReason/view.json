          "x": 0.341,
          "y": 0.0324
        },
        "propConfig": {
          "props.options": {
            "binding": {
              "config": {
                "queryPath": "Downtime/GetTopLevelReasonsForDropdown"
              },
              "type": "query"
            }
          },
          "props.value": {
            "binding": {
              "config": {
                "expression": "{view.custom.ReasonData[0].ParentReasonID}"
              },
              "type": "expr"
            },
            "onChange": {
              "enabled": null,
              "script": "\tif currentValue.value !\u003d \"\" and currentValue.value is not None and currentValue.value !\u003d 0:\n\t\treasonGroupID \u003d system.db.runScalarPrepQuery(\"SELECT ReasonGroupID FROM DowntimeReason WHERE ID \u003d ?\", [currentValue.value])\n\t\tself.getSibling(\"Reason Group Dropdown\").props.value \u003d reasonGroupID\n\telse:\n\t\tself.getSibling(\"Reason Group Dropdown\").props.value \u003d \"\""
            }
          }
        },
        "type": "ia.input.dropdown"
      },
      {
        "meta": {
          "name": "AndonGroup Dropdown"
        },
        "position": {
          "height": 0.1059,
          "width": 0.5577,
          "x": 0.341,
          "y": 0.5147
        },
        "propConfig": {
          "props.options": {
            "binding": {
              "config": {
                "queryPath": "Downtime/GetAndonGroupForDropdown"
              },
              "type": "query"
            }
          },
          "props.value": {
            "binding": {
              "config": {
                "expression": "{view.custom.ReasonData[0].AndonGroupID}"
              },
              "type": "expr"
            }
          }
        },
        "type": "ia.input.dropdown"
      },
      {
        "meta": {
          "name": "Reason Group Dropdown"
        },
        "position": {
          "height": 0.1059,
          "width": 0.5577,
          "x": 0.341,
          "y": 0.6676
        },
        "propConfig": {
          "custom.ParentReasonEmpty": {
            "binding": {
              "config": {
                "expression": "{../Parent Reason Dropdown.props.value} \u003d \"\" \r\n||\r\nisNull({../Parent Reason Dropdown.props.value})\r\n||\r\n{../Parent Reason Dropdown.props.value} \u003d 0"
              },
              "type": "expr"
            }
          },
          "props.enabled": {
            "binding": {
              "config": {
                "path": "this.custom.ParentReasonEmpty"
              },
              "type": "property"
            }
          },
          "props.options": {
            "binding": {
              "config": {
                "queryPath": "Downtime/GetDowntimeReasonGroupForDropdown"
              },
              "type": "query"
            }
          },
          "props.value": {
            "binding": {
              "config": {
                "expression": "{view.custom.ReasonData[0].ReasonGroupID}"
              },
              "type": "expr"
            }
          }
        },
        "type": "ia.input.dropdown"
      },
