          "component": {
            "onActionPerformed": {
              "config": {
                "script": "\treasonId \u003d self.custom.PressedReasonId\n\treasonParams \u003d {\"ReasonId\": reasonId}\n\t\n\tprevId \u003d system.db.runNamedQuery(\"Downtime Entry/GetPreviousDowntimeReasonId\", reasonParams)\n\tchildParams \u003d {\"ReasonId\": prevId}\n\treasons \u003d system.db.runNamedQuery(\"Downtime Entry/GetChildReasons\", childParams)\n\n\tif reasons.getRowCount() \u003e 0:\n\t\tself.view.custom.Reasons \u003d reasons\n\telse:\n\t\teqID \u003d self.view.params.EquipmentID\n\t\t\n\t\tparameters  \u003d {\"EquipmentID\":eqID}\n\t\tself.view.custom.Reasons \u003d system.db.runNamedQuery(\"Downtime Entry/GetTopLevelReasonsByEquipmentID\", parameters)\n\tself.session.custom.SelectedReasonID \u003d 0\n\tsystem.perspective.sendMessage(\"ClearLastActiveReason\", {\"ReasonId\": 0})"
              },
              "scope": "G",
              "type": "script"
            }
          }
        },
        "meta": {
